{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@fixblox/quoteflow-core": ["packages/quoteflow-core/src/index.ts"],
      "@fixblox/quoteflow-core/*": ["packages/quoteflow-core/src/*"],
      "@fixblox/supabase-client": ["packages/supabase-client/src/index.ts"],
      "@fixblox/supabase-client/*": ["packages/supabase-client/src/*"],
      "@fixblox/ui": ["packages/ui/src/index.ts"],
      "@fixblox/ui/*": ["packages/ui/src/*"]
    }
  },
  "include": []
}
